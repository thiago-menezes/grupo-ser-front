# =================================
# Next.js Environment Variables
# =================================

# Node environment
NODE_ENV=development

NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# =================================
# Strapi CMS Configuration
# =================================
STRAPI_URL=http://localhost:1337
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337
STRAPI_TOKEN=your-strapi-token-here

# =================================
# External APIs
# =================================
# Client API (SE Educacional)
API_BASE_URL=https://lps-nvps.sereducacional.com

# API de Cursos
# Desenvolvimento: http://localhost:4000 (json-server)
# Produção (AWS): Via internal ALB
COURSES_API_BASE_URL=http://localhost:4000

# =================================
# Application Configuration
# =================================
APP_BASE_URL=http://localhost:3000

# =================================
# ISR Revalidation (AWS Migration)
# =================================
# Secret token for on-demand revalidation via webhook from Strapi
# Generate with: openssl rand -base64 32
REVALIDATION_SECRET=your-secret-token-here

# =================================
# Production Configuration (AWS)
# =================================
# Uncomment and configure these for production deployment

# Strapi CMS (production)
# STRAPI_URL=https://cms.gruposer.com.br
# NEXT_PUBLIC_STRAPI_URL=https://cms.gruposer.com.br

# CDN for media assets (CloudFront)
# CDN_URL=https://assets.gruposer.com.br

# Application base URL (production)
# APP_BASE_URL=https://unama.com.br
